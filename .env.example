# ==============================================
# ANONYMOUS REAL-TIME GALLERY - CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values
# ==============================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=sqlite:./database.sqlite

# Security & Authentication
# Generate JWT secret with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_replace_with_random_string

# hCaptcha Configuration (for bot protection)
# Get your keys from: https://www.hcaptcha.com/
# For development, use test keys that always pass:
HCAPTCHA_SECRET_KEY=0x0000000000000000000000000000000000000000
HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001

# File Upload Configuration (5MB default)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
PUBLIC_PATH=./public

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FILE=./server.log

# Admin Configuration
# IMPORTANT: Change these credentials in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# API Keys (comma-separated, generated via admin panel)
API_KEYS=

# Google Analytics 4 (Optional)
# Get measurement ID from: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Image Processing
IMAGE_QUALITY=80
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
